{
	"name": "filesac",
	"version": "12.0.0",
	"description": "File utility functions",
    "license": "CC0-1.0",
    "type": "module",
	"main": "files.js",
	"scripts": {
		"test": "node --experimental-modules tests/files-test.js",
		"lint-fix": "eslint --ignore-path .gitignore --fix files.js",
		"lint": "eslint --ignore-path .gitignore files.js"
	},
	"devDependencies": {
		"eslint": "^6.5.1",
		"eslint-config-red": "^1.4.1"
	},
	"eslintConfig": {
		"extends": [
			"red"
		],
		"parserOptions": {
			"ecmaVersion": 2020,
			"sourceType": "module"
		},
		"env": {
			"node": true,
			"es6": true
		}
	},
	"files": [
		"files.js",
		"readme.me",
		"changelog.md",
		"license.txt"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/GrosSacASac/filesac.git"
	},
	"keywords": [
		"utility",
		"file"
	]
}
